<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.evo09.timetablemanager.myNotes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:visibility="visible"
            android:id="@+id/dynamicShowdata">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/Start_from_scratch"
                android:textAllCaps="false"
                android:typeface="monospace"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundedboarder"
                android:layout_margin="10sp"
                android:textStyle="bold"
                android:id="@+id/dynamic"
                android:gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/statically"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="monospace"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/roundedboarder"
                android:layout_margin="10sp"
                android:text="@string/Start_with_a_table_skeleton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:visibility="gone"
            android:id="@+id/Staticshowdata"
            android:orientation="vertical">
            <ScrollView
                android:id="@+id/container"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/StartTime"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:hint="Start Time Ex. 08:00AM"
                            android:textColor="@color/colorPrimary"
                            android:typeface="monospace"
                            android:focusable="false">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/PeriodDuration"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:maxLength="2"
                            android:gravity="start|center"
                            android:typeface="monospace"
                            android:textColor="@color/colorPrimary"
                            android:hint="Period Duration Ex.45M"
                            android:imeOptions="actionNext">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/BreakStartTime"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:textColor="@color/colorPrimary"
                            android:hint="Break Start Time Ex. 12:30PM"
                            android:typeface="monospace"
                            android:focusable="false">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/BreakDuration"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:maxLength="2"
                            android:gravity="start|center"
                            android:hint="Break Duration Ex.45M"
                            android:typeface="monospace"
                            android:textColor="@color/colorPrimary"
                            android:imeOptions="normal">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/EndTime"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorPrimary"
                            android:typeface="monospace"
                            android:gravity="start|center"
                            android:hint="End Time Ex. 02:00PM"
                            android:focusable="false">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/Alarmbefore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="2"
                            android:typeface="monospace"
                            android:textColor="@color/colorPrimary"
                            android:gravity="start|center"
                            android:hint="Remind Before Ex.10M (optional)"
                            android:imeOptions="normal">
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/footer"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/Create"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/backstack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Back"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
