<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.evo09.timetablemanager.MySchedules">
    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<!-- 12//////////////////////////////////////////////////// -->
       <android.support.v4.view.ViewPager
           android:id="@+id/pager"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_above="@+id/updatelayout"
           android:overScrollMode="never"
           android:layout_alignParentStart="true">

           <android.support.v4.view.PagerTabStrip
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="top"
               android:textColor="#000000" />
       </android.support.v4.view.ViewPager>
<!--Popup -->

       <!--ADD/UPDATE-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/updatelayout"
           android:layout_alignParentBottom="true"
           android:visibility="gone"
           android:background="@color/white">
           <ScrollView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
               <!-- //////////////////////////////////////////////////// -->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="30dp"
                       android:orientation="horizontal"
                       android:weightSum="2"
                       android:background="@color/blue">
                       <ImageView
                           android:id="@+id/image"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.8"
                           android:layout_gravity="right"
                           android:scaleType="fitEnd"
                           android:src="@android:drawable/ic_menu_edit"/>
                       <TextView
                           android:id="@+id/title"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1.2"
                           android:layout_marginLeft="10dp"
                           android:text="Schedule Now"
                           android:textAlignment="textStart"
                           android:inputType="time"
                           android:textColor="@color/grey"
                           android:textStyle="bold"
                           android:textAppearance="?android:attr/textAppearanceLarge" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/orange"></LinearLayout>
                <!-- //////////////////////////////////////////////////// -->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:orientation="horizontal"
                       android:weightSum="2"
                       android:padding="5dp">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:text="Day of Week "
                           android:gravity="bottom"
                           android:background="@drawable/borderbottom"
                           android:layout_weight="0.95"/>
                       <TextView
                           android:layout_width="2dp"
                           android:text=":"
                           android:textColor="@color/blue"
                           android:textAlignment="center"
                           android:layout_weight="0.10"
                           android:gravity="bottom"
                           android:layout_height="match_parent"/>
                       <TextView
                           android:id="@+id/Dayofweek"
                           android:layout_width="0dp"
                           android:layout_weight="0.95"
                           android:gravity="bottom"
                           android:layout_height="match_parent"
                           android:background="@drawable/borderbottom"
                           android:hint=""/>
                   </LinearLayout>
               <!-- //////////////////////////////////////////////////// -->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:orientation="horizontal"
                       android:weightSum="2"
                       android:padding="5dp">

                       <TextView
                           android:id="@+id/StartTime"
                           android:layout_width="0dp"
                           android:layout_weight="0.95"
                           android:textSize="16dp"
                           android:gravity="bottom"
                           android:hint="Starting Time"
                           android:background="@drawable/borderbottom"
                           android:layout_height="match_parent"/>
                       <TextView
                           android:layout_width="2dp"
                           android:text="|"
                           android:textColor="@color/blue"
                           android:textAlignment="center"
                           android:layout_weight="0.10"
                           android:gravity="bottom"
                           android:layout_height="match_parent"/>
                       <TextView
                           android:id="@+id/EndTime"
                           android:layout_width="0dp"
                           android:layout_weight="0.95"
                           android:textSize="16dp"
                           android:gravity="bottom"
                           android:hint="Ending Time"
                           android:background="@drawable/borderbottom"
                           android:layout_height="match_parent"/>
                   </LinearLayout>
               <!-- //////////////////////////////////////////////////// -->

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="2">

                       <android.support.design.widget.TextInputLayout
                           android:layout_width="0dp"
                           android:layout_weight="0.95"
                           android:textSize="16dp"
                           android:layout_height="wrap_content">
                           <AutoCompleteTextView
                               android:id="@+id/Subject"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:hint="Sub Ex:Eng101"
                               android:textSize="16dp"
                               android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                               android:textColorHighlight="@android:color/black"
                               android:singleLine="true"
                               android:completionThreshold="1"
                               android:imeOptions="actionNext"
                               android:inputType="textCapWords">
                               <requestFocus/>
                           </AutoCompleteTextView>
                       </android.support.design.widget.TextInputLayout>

                       <TextView
                           android:layout_width="2dp"
                           android:text="|"
                           android:layout_weight="0.10"
                           android:textColor="@color/blue"
                           android:textAlignment="center"
                           android:gravity="bottom"
                           android:layout_marginBottom="10dp"
                           android:layout_height="match_parent"/>

                       <android.support.design.widget.TextInputLayout
                           android:layout_width="0dp"
                           android:layout_weight="0.95"
                           android:textSize="16dp"
                           android:layout_height="wrap_content">
                           <AutoCompleteTextView
                               android:id="@+id/Venue"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:hint="Ven Ex:B15202"
                               android:textSize="16dp"
                               android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                               android:textColorHighlight="@android:color/black"
                               android:singleLine="true"
                               android:completionThreshold="1"
                               android:imeOptions="actionNext"
                               android:inputType="textCapWords">
                               <requestFocus/>
                           </AutoCompleteTextView>
                       </android.support.design.widget.TextInputLayout>

                   </LinearLayout>
               <!-- //////////////////////////////////////////////////// -->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="2">
                       <android.support.design.widget.TextInputLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.95">
                           <EditText
                               android:id="@+id/AlermBefore"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:hint="Alerm Before Ex:10M "
                               android:inputType="number"
                               android:maxLength="2"
                               android:imeOptions="actionGo"
                               android:textSize="16dp" >
                                <requestFocus/>
                           </EditText>
                       </android.support.design.widget.TextInputLayout>
                       <TextView
                           android:layout_width="2dp"
                           android:text="|"
                           android:layout_weight="0.10"
                           android:textColor="@color/blue"
                           android:textAlignment="center"
                           android:gravity="bottom"
                           android:layout_marginBottom="10dp"
                           android:layout_height="match_parent"/>
                       <CheckBox
                           android:layout_width="0dp"
                           android:layout_marginTop="15dp"
                           android:layout_height="match_parent"
                           android:layout_weight="0.95"
                           android:id="@+id/AlermRepeat"
                           android:checked="false"
                           android:text="Set"/>
                   </LinearLayout>
               <!-- //////////////////////////////////////////////////// -->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/orange"></LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="30dp"
                       android:orientation="horizontal"
                       android:weightSum="2">
                       <Button
                           android:id="@+id/ButtonAddUpdate"
                           android:layout_width="0dp"
                           android:gravity="center"
                           android:text="ADD"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:background="@color/blue"
                           android:layout_weight="1"
                           android:layout_height="fill_parent"/>
                       <Button
                           android:id="@+id/ButtonCancel"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:text="Cancel"
                           android:gravity="center"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:background="@color/red"
                           android:layout_height="fill_parent"/>
                   </LinearLayout>
               </LinearLayout>
           </ScrollView>
       <!-- //////////////////////////////////////////////////// -->
       </LinearLayout>

   <!-- /Popup -->
   </RelativeLayout>

</FrameLayout>
