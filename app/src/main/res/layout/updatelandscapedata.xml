<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.evo09.timetablemanager.myTask">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- //////////////////////////////////////////////////// -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today Task..."
                    android:typeface="monospace"
                    android:textAlignment="center"
                    android:inputType="time"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/datafield"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/Subject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Subject"
                            android:textSize="16dp"
                            android:typeface="monospace"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                            android:textColorHighlight="@android:color/black"
                            android:singleLine="true"
                            android:completionThreshold="1"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textCapWords">
                            <requestFocus/>
                        </AutoCompleteTextView>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="2dp"
                        android:text="|"
                        android:layout_weight="0.10"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/Venue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Venue"
                            android:textSize="16dp"
                            android:typeface="monospace"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                            android:textColorHighlight="@android:color/black"
                            android:singleLine="true"
                            android:imeOptions="flagNoExtractUi"
                            android:completionThreshold="1"
                            android:inputType="textCapWords">
                            <requestFocus/>
                        </AutoCompleteTextView>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <!-- //////////////////////////////////////////////////// -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/AlermBefore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Alarm_Before"
                            android:inputType="number"
                            android:maxLength="2"
                            android:typeface="monospace"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="16dp" >
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/AlermRepeat"
                        android:checked="false"
                        android:text="@string/Set"/>
                </LinearLayout>
            </LinearLayout>
            <!-- //////////////////////////////////////////////////// -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/ButtonAddUpdate"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/Update"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textAllCaps="false"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"/>
                <Button
                    android:id="@+id/ButtonDelete"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textAllCaps="false"
                    android:background="@color/red"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>