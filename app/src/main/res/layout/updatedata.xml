<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorTransparent"
    android:id="@+id/btn_bottom_sheet">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"/>
                <!-- //////////////////////////////////////////////////// -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/Dayofweek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:layout_height="match_parent"
                        android:hint=""/>
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/Allday"
                        android:checked="false"
                        android:text="@string/All_Day"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/borderbottom"/>
                <!-- //////////////////////////////////////////////////// -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/StartTime"
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:gravity="bottom"
                        android:hint="@string/Start_Time"
                        android:background="@drawable/borderbottom"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="2dp"
                        android:text="|"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:layout_weight="0.10"
                        android:gravity="bottom"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/EndTime"
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:gravity="bottom"
                        android:hint="@string/End_Time"
                        android:background="@drawable/borderbottom"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <!-- //////////////////////////////////////////////////// -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/Subject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Subject"
                            android:textSize="16dp"
                            android:textColor="@android:color/background_dark"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                            android:textColorHighlight="@android:color/black"
                            android:singleLine="true"
                            android:completionThreshold="1"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textCapWords">
                            <requestFocus/>
                        </AutoCompleteTextView>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="2dp"
                        android:text="|"
                        android:layout_weight="0.10"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:textSize="16dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/Venue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Venue"
                            android:textSize="16dp"
                            android:textColor="@android:color/background_dark"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                            android:textColorHighlight="@android:color/black"
                            android:singleLine="true"
                            android:completionThreshold="1"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textCapWords">
                            <requestFocus/>
                        </AutoCompleteTextView>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <!-- //////////////////////////////////////////////////// -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95">
                        <EditText
                            android:id="@+id/AlermBefore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/Alarm_Before"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textColor="@android:color/background_dark"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="16dp" >
                            <requestFocus/>
                        </EditText>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="2dp"
                        android:text="|"
                        android:layout_weight="0.10"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"/>
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:id="@+id/AlermRepeat"
                        android:textColor="@android:color/background_dark"
                        android:checked="false"
                        android:text="@string/Set"/>
                </LinearLayout>
                <!-- //////////////////////////////////////////////////// -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <Button
                        android:id="@+id/ButtonAddUpdate"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:text="@string/Add"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@color/colorAccent"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"/>
                    <Button
                        android:id="@+id/ButtonCancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/Cancel"
                        android:gravity="center"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@color/colorPrimary"
                        android:layout_height="fill_parent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>